{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@1start/ui-kit": ["packages/ui-kit/src"],
      "@1start/core-types": ["packages/core-types/src"],
      "@1start/sdk-js": ["packages/sdk-js/src"],
      "@1start/db": ["packages/db/src"]
    }
  }
}